<h2>
  <span  class="fas fa-user-plus"></span> Sign up
</h2>

<form method="post" action="/user/register">
  <div class="form-group">
    <label for="username">Username:</label>      
    <input type="text" id="username" class="form-control" name="username" placeholder="Enter username" required="required" autofocus="autofocus" />    
  </div>
  <div class="form-group">
    <label for="password">Password:</label>
    <input type="password" id="password" class="form-control" name="password" placeholder="Password at least 10 characters long" oninput="validate()" required="required" />    
  </div>
  <div class="form-group">
      <input type="password" id="repeatedpassword" class="form-control" name="repeatedpassword" placeholder="Confirm password" oninput="validate()" required="required" />
  </div>
  <button type="submit" class="btn btn-lg btn-primary">Sign up</button>  
</form>

<script type="application/javascript">
  var pass1 = document.querySelector('#password')
  var pass2 = document.querySelector('#repeatedpassword')
  var button = document.querySelector('.btn')
  button.classList.add('disabled')
  button.disabled = true
  function validate() {
    if (pass1.value.length < 10) {
      pass1.classList.add('is-invalid')      
    } else {
      pass1.classList.remove('is-invalid')
      pass1.classList.add('is-valid')      
    }
    if (pass2.value.length > 0) {
      if (pass1.value !== pass2.value && pass2.value.length > 0) {
        pass2.classList.add('is-invalid')        
      } else {
        pass2.classList.remove('is-invalid')
        pass2.classList.add('is-valid')
        button.classList.remove('disabled')
        button.disabled = false
      }
    }
  }
</script>